# vim: ts=2:sw=2:et
#
# Please keep blacklist/whitelist sorted
#

[buildconfig]
builder = tito.builder.GitAnnexBuilder
tagger = tito.tagger.ReleaseTagger
lib_dir = rel-eng/custom/

[builder]
fetch_strategy = custom.ForemanSourceStrategy

[katello-2.4-rhel5]
disttag = .el5
whitelist = katello-repos katello-agent

[katello-2.4-rhel6]
disttag = .el6
scl = tfm

[katello-2.4-rhel7]
disttag = .el7
scl = tfm

[katello-2.4-fedora22]
disttag = .fc22
whitelist = katello-repos katello-agent

[katello-2.4-fedora23]
disttag = .fc23
whitelist = katello-repos katello-agent

[requirements]
tito=0.5.6
